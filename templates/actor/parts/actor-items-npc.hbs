<!--NPCAttacks-->
<ol class='items-list'>
  <li><h2>Attacks</h2></li>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-formula'>Damage {{localize 'Formula'}}</div>
    <div class='item-formula'>Heal {{localize 'Formula'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='npcattack'}}'
        data-type='npcattack'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='npcattack'}}
      </a>
    </div>
  </li>
  {{#each npcattack as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
         <div class='item-image'>
          <a class='info' data-item-id='{{item._id}}'>
            <i class="fa-solid fa-circle-info"></i>
          </a>
        </div>
        <div class='item-image'>
          <a class='rollable' data-roll-type='{{item.type}}' data-pool="{{item.system.pool}}" data-actor-id="{{../actor._id}}">
            <i class="fa-solid fa-dice-d12"></i>
          </a>
        </div>
        {{#if (isDamageItem item)}}
        <div class='item-image'>
          <a class='roll-damage' data-pool="{{item.system.pool}}" data-formula="{{item.system.formula}}" data-weapon="Attack" >
            <i class="fa-solid fa-heart-crack"></i>
          </a>
        </div>
        {{/if}}
        {{#if item.system.heal}}
        <div class='item-image'>
          <a class='roll-heal' data-pool="{{item.system.pool}}" data-heal="{{item.system.healFormula}}">
            <i class="fa-solid fa-notes-medical"></i>
          </a>
        </div>
        {{/if}}
        <h4>{{item.name}}</h4>
      </div>
      <h4 class="item-formula item-prop">{{item.system.formula}}</h4>
      <h4 class="item-formula item-prop">{{#if item.system.heal}}{{item.system.healFormula}}{{/if}}</h4>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='weapons'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='weapons'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    <li id="{{item._id}}" class='item flexrow hidden' data-item-id='{{item._id}}'>
      <div class="item-description">
        {{{item.system.description}}}
      </div>
    </li>
  {{/each}}
</ol>


