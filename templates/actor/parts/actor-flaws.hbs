<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='flaws'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='flaws'}}
      </a>
    </div>
  </li>
  {{#each flaws as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='info' data-item-id='{{item._id}}'>
            <i class="fa-solid fa-circle-info"></i>
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='flaws'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='flaws'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    <li id="{{item._id}}" class='item flexrow hidden' data-item-id='{{item._id}}'>
      <div class="item-description">
        {{{item.system.description}}}
      </div>
    </li>
  {{/each}}
</ol>