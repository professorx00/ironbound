<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-formula'>Action Points</div>
    <div class='item-formula'>Pool</div>
    <div class='item-formula'>Damage Formula</div>
    <div class='item-formula'>Heal Formula</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='magicalSocieties'
      >
        <i class='fas fa-plus'></i>
        Magical Society
      </a>
    </div>
  </li>
  {{#each magicalSocieties as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class="item-name">
          <div class='item-image info' data-item-id="{{item._id}}">
            <a data-roll-type='item'>
              <i class="fa-solid fa-circle-info"></i>
            </a>
          </div>
          <div class='item-image'>
          <a class='rollable' data-roll-type='{{item.type}}' data-pool="{{item.system.pool}}" data-actor-id="{{../actor._id}}">
            <i class="fa-solid fa-dice-d12"></i>
          </a>
        </div>
        {{#if (isDamageItem item)}}
        <div class='item-image'>
          <a class='roll-damage' data-pool="{{item.system.pool}}" data-formula="{{item.system.formula}}" >
            <i class="fa-solid fa-heart-crack"></i>
          </a>
        </div>
        {{/if}}
        {{#if item.system.heal}}
        <div class='item-image'>
          <a class='roll-heal' data-pool="{{item.system.pool}}" data-heal="{{item.system.healFormula}}" data-weapon="Magic">
            <i class="fa-solid fa-notes-medical"></i>
          </a>
        </div>
        {{/if}}
        <h4 class="item-name">{{item.name}}</h4>
        </div>
        <h4 class="item-formula item-prop">{{item.system.actionPoints}}</h4>
        <h4 class="item-formula item-prop">{{item.system.pool}}</h4>
        <h4 class="item-formula item-prop">{{item.system.formula}} Damage</h4>
        <h4 class="item-formula item-prop">{{item.system.healFormula}} Heal</h4>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Edit" type='feature'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='feature'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
          <a class="item-control bookmark" data-item-id="{{item._id}}">
           {{#if system.fav}}
            <i class="fa-solid fa-bookmark"></i>
            {{else}}
            <i class="fa-regular fa-bookmark"></i>
            {{/if}}
        </a>
        </div>
    </li>
    <li id="{{item._id}}" class='item flexrow hidden' data-item-id='{{item._id}}'>
      <div class="item-description">
        {{{item.system.description}}}
      </div>
    </li>
  {{/each}}
</ol>